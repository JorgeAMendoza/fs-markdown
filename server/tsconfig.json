{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "outDir": "dist",
    "rootDirs": ["src"]
  },
  "exclude": ["**/node_modules"]
}
